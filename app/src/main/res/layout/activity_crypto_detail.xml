<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/detailSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbol" />

        <TextView
            android:id="@+id/detailPriceChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Change" />

        <TextView
            android:id="@+id/detailPriceChangePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Change Percent" />

        <TextView
            android:id="@+id/detailWeightedAvgPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weighted Avg Price" />

        <TextView
            android:id="@+id/detailPrevClosePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev Close Price" />

        <TextView
            android:id="@+id/detailLastPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Price" />

        <TextView
            android:id="@+id/detailLastQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Qty" />

        <TextView
            android:id="@+id/detailBidPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid Price" />

        <TextView
            android:id="@+id/detailBidQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bid Qty" />

        <TextView
            android:id="@+id/detailAskPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask Price" />

        <TextView
            android:id="@+id/detailAskQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask Qty" />

        <TextView
            android:id="@+id/detailOpenPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Price" />

        <TextView
            android:id="@+id/detailHighPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Price" />

        <TextView
            android:id="@+id/detailLowPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low Price" />

        <TextView
            android:id="@+id/detailVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume" />

        <TextView
            android:id="@+id/detailQuoteVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quote Volume" />

        <TextView
            android:id="@+id/detailOpenTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Time" />

        <TextView
            android:id="@+id/detailCloseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close Time" />

        <TextView
            android:id="@+id/detailFirstId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Id" />

        <TextView
            android:id="@+id/detailLastId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Id" />

        <TextView
            android:id="@+id/detailCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count" />
    </LinearLayout>
</ScrollView>
